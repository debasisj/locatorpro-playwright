{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts",
        "src/**/__tests__/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}